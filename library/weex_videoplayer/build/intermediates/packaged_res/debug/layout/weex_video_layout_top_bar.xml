            <!--android:id="@+id/tv_system_time"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:textSize="16sp"/>-->

    </LinearLayout>
</merge>